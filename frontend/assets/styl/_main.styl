*
  box-sizing: border-box
  font-size: 62.5%
  &::before,
  &::after
    box-sizing: border-box

html
  min-height: 100%
  font-family: Roboto, sans-serif
  color: #242424
  display: flex
  flex-direction: column
  background-color: #564f4f

body
  flex: auto
  flex-direction: column
  background:
          linear-gradient(-5deg, #fff 41.7rem, transparent 42rem),
          url(../img/bcg__icon1.png) no-repeat 11.3rem 60.8rem,
          url(../img/bcg__icon2.png) no-repeat 24.5rem 59.5rem,
          url(../img/bcg__icon3.png) no-repeat 36.8rem 58.2rem,
          url(../img/bcg__icon4.png) no-repeat 50.5rem 57.2rem,
          url(../img/bcg__icon5.png) no-repeat 63.5rem 56.2rem

h1,
h2,
h3,
h4,
h5,
h6,
p
  padding: 0
  margin: 0

a,
a:active,
a:hover,
a:focus
  text-decoration: none

strong
  font-size: inherit
  font-weight: 500

.flex
  display: flex
  &__inl
    display: inline-flex

.layout
  padding: 0 3rem

.input
  width: 100%
  padding: 1.5rem
  font-size: 1.9rem
  font-weight: 300
  &__submit
    width: 100%
    border: none
    font-size: 1.9rem
    font-weight: 700
    line-height: 5.5rem

.main
  width: 100%
  max-width: 136.6rem
  min-width: 103rem
  padding-left: 17rem
  padding-right: 16.6rem
  margin: auto
  flex-grow: 1

.section
  display: flex
  &__h2
    font-size: 5rem
    font-weight: 900
  &__h4
    color: #252525;
    font-size: 3rem
    font-weight: 700
  &__p
    font-size: 1.4rem
    font-weight: 300
    
.sign
  width: 43rem
  background: #fff
  box-shadow: 0 .1rem .2rem rgba(35, 31, 32, 0.65)
  padding-top: 3rem
  padding-bottom: 2rem
  &__header
    margin-bottom: 2rem
  & .section__h4
    text-align: center
  & .input
    color: #6c6c6c
    margin-bottom: 2rem
    &__submit
      color: #fff
      background-color: #90d23d
      border-radius: .5rem
      margin: 2rem 0
  &__text
    padding: 0 7.5rem
    font-size: 1.5rem
    font-weight: 300
    color: #6c6c6c

.greet
  justify-content: space-around
  &__item
    flex-grow: 1
    flex-basis: 50%